{
  "compilerOptions": {
    "target": "es2019",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["es2019"],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "rootDirs": ["./src", "./test"],
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts"],
  "exclude": ["node_modules", "./dist"]
}
